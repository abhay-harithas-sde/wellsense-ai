# WellSense AI - Production Environment Configuration

NODE_ENV=production
PORT=3000

# CORS Configuration - IMPORTANT: Set to your actual domain(s)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# HTTPS Configuration
ENABLE_HTTPS=true
HTTPS_PORT=443
HTTP_PORT=80
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_CA_PATH=/path/to/ssl/ca_bundle.crt

# PostgreSQL Database (Primary) - Use production database
DATABASE_URL="postgresql://username:password@production-host:5432/wellsense_ai"

# MongoDB Database (Document Store) - Use production database
MONGODB_URI="mongodb://username:password@production-host:27017/wellsense_ai?authSource=admin"

# Redis (Cache & Sessions) - Use production Redis
REDIS_URL="redis://production-host:6379"

# JWT Configuration - MUST BE DIFFERENT FROM DEVELOPMENT
JWT_SECRET=<GENERATE_NEW_STRONG_SECRET_FOR_PRODUCTION>
JWT_EXPIRES_IN=7d

# Google OAuth - Use production credentials
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# Microsoft OAuth (Optional)
MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-production-microsoft-client-secret
MICROSOFT_CALLBACK_URL=https://yourdomain.com/auth/microsoft/callback

# OpenAI Configuration - Use production key
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TOTAL_TOKEN_LIMIT=300000

# Firebase - Use production credentials
FIREBASE_PROJECT_ID=your-production-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-production-firebase-client-email

# Feature Flags
VITE_ENABLE_AI_CHAT=true
VITE_PRODUCTION_MODE=true

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=<GENERATE_STRONG_SESSION_SECRET>
SESSION_MAX_AGE=86400000

# Security
TRUST_PROXY=true
SECURE_COOKIES=true
