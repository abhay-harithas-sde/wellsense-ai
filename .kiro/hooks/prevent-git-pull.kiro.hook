{
  "enabled": true,
  "name": "Prevent Git Pull",
  "description": "Blocks any git pull commands to protect local codebase from being overwritten",
  "version": "1",
  "when": {
    "type": "preToolUse",
    "toolTypes": [
      "shell"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "STOP! Check if this command contains 'git pull'. If it does, DO NOT execute it. Inform the user that git pull is blocked by policy. For any other command, proceed normally."
  }
}